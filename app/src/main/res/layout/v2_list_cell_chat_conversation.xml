<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_16">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/tv_unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/space_13"
            android:background="@drawable/ic_unread_count_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/avatar_container"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_16"
        android:paddingRight="@dimen/space_8"
        android:paddingTop="@dimen/space_16">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#888888"
            android:textSize="@dimen/text_size_12" />

        <net.oschina.app.v2.activity.chat.view.AsynTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_time"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:textColor="#000"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/iv_msg_state"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_name"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_msg_state_fail_resend"
            android:visibility="visible" />

        <TextView xmlns:emoji="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/iv_msg_state"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/avatar_container"
        android:background="@color/list_divider_color" />
</RelativeLayout>
